@model IEnumerable<Senhas.Models.Entities.TipoSenha>

@{
    ViewData["Title"] = "Retirar Senha";
}





<div class="retirar-container">
    <h1 class="retirar-titulo">Retirar Senha</h1>

    <div class="retirar-opcoes">
        @foreach (var tipo in Model)
        {
            <form asp-action="Gerar" method="post" class="retirar-form">
                <input type="hidden" name="tipoSenhaId" value="@tipo.Id" />
                <button type="submit" class="retirar-botao">
                    @tipo.Nome
                </button>
            </form>
        }
    </div>
</div>

<style>
   

    /* Container principal */
    .retirar-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 120px; /* espaço para header fixo */
        text-align: center;
    }

    /* Título */
    .retirar-titulo {
        font-size: 3rem;
        margin-bottom: 50px;
    }

    /* Botões / opções */
    .retirar-opcoes {
        width: 100%;
        max-width: 900px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 30px;
        padding: 0 20px;
    }

    .retirar-form {
        width: 100%;
    }

    /* Botão */
    .retirar-botao {
        width: 100%;
        padding: 40px 20px;
        font-size: 2rem;
        font-weight: bold;
        background-color: var(--cor-terciaria);
        color: #000;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        transition: transform 0.2s ease, background-color 0.2s ease;
    }

        .retirar-botao:hover {
            background-color: var(--cor-hover);
            transform: scale(1.03);
        }
</style>
