@model List<Senhas.Models.Entities.Usuario>
@{
    ViewData["Title"] = "Administração de Usuários";
    var guiches = ViewBag.Guiches as List<Senhas.Models.Entities.Guiche>;
}

<div class="admin-container">

    <h2>Administração de Usuários</h2>

    @if (TempData["Sucesso"] != null)
    {
        <div class="success">@TempData["Sucesso"]</div>
    }

    <div class="admin-table">
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nome @usuario.Sobrenome</td>
                        <td>@usuario.Email</td>
                        <td>
                            <button class="btn-edit" onclick="openModal('modal-@usuario.Id')">Editar Guichês</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modais -->
    @foreach (var usuario in Model)
    {
        <div id="modal-@usuario.Id" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('modal-@usuario.Id')">&times;</span>
                <h3>Editar Guichês - @usuario.Nome</h3>
                <form asp-action="AtualizarGuiches" method="post">
                    <input type="hidden" name="usuarioId" value="@usuario.Id" />
                    <div class="checkbox-group">
                        @foreach (var guiche in guiches)
                        {
                            var selecionado = usuario.UsuarioGuiches.Any(ug => ug.GuicheId == guiche.Id) ? "checked" : "";
                            <label class="checkbox-label">
                                <input type="checkbox" name="guichesSelecionados" value="@guiche.Id" @selecionado />
                                @guiche.Nome
                            </label>
                    
                            <br />
                        }
                    </div>
                    <button type="submit" class="btn-save">Salvar</button>
                </form>
            </div>
        </div>
    }
</div>

<script>
    function openModal(id) {
        document.getElementById(id).style.display = 'block';
    }

    function closeModal(id) {
        document.getElementById(id).style.display = 'none';
    }

    // Fecha modal clicando fora
    window.onclick = function(event) {
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        });
    };
</script>

<style>
    .admin-container {
        font-family: Arial, sans-serif;
        padding: 30px;
        background: #f0f2f5;
        min-height: 100vh;
    }

        .admin-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

    .admin-table {
        max-width: 800px;
        margin: 0 auto;
        overflow-x: auto;
    }

        .admin-table table {
            width: 100%;
            border-collapse: collapse;
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .admin-table th, .admin-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .admin-table th {
            background: #007bff;
            color: #fff;
        }

        .admin-table tr:hover {
            background-color: #f1f1f1;
        }

    .btn-edit {
        padding: 8px 14px;
        background: #28a745;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
    }

        .btn-edit:hover {
            background: #218838;
        }

    .success {
        color: #155724;
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        padding: 12px;
        margin-bottom: 15px;
        border-radius: 6px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Modal */
    .modal {
        display: none;
        position: fixed;
        z-index: 10;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.5);
    }

    .modal-content {
        background-color: #fff;
        margin: 8% auto;
        padding: 30px 40px;
        border-radius: 12px;
        width: 400px;
        position: relative;
    }

    .close {
        color: #aaa;
        position: absolute;
        top: 12px;
        right: 20px;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover {
            color: black;
        }

    .checkbox-group {
        margin: 20px 0;
    }

    .checkbox-label {
        display: block;
        font-size: 14px;
        margin-bottom: 5px;
    }

    .btn-save {
        width: 100%;
        padding: 10px;
        background: #007bff;
        border: none;
        color: #fff;
        font-size: 16px;
        border-radius: 6px;
        cursor: pointer;
    }

        .btn-save:hover {
            background: #0056b3;
        }

</style>